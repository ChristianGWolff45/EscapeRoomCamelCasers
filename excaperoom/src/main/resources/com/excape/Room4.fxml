<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.excape.RoomController"
            fx:id="root"
            prefWidth="1100" prefHeight="800"
            style="-fx-background-color: black;">

    <!-- Background image (controller binds & centers it) -->
    <ImageView fx:id="mainImageView"
               pickOnBounds="true"
               preserveRatio="true"
               smooth="true"
               fitWidth="1100.0" fitHeight="800.0">
        <image>
            <Image url="@images/Room4.png" />
        </image>
    </ImageView>

    <!-- menuButton — SAME LOCATION AS ROOM 2 -->
    <ImageView fx:id="menuButton"
               fitHeight="104.0" fitWidth="106.0"
               layoutX="180.0" layoutY="900.0"
               onMouseClicked="#handleMenuClick"
               pickOnBounds="true" preserveRatio="true"
               style="-fx-cursor: hand;">
        <image>
            <Image url="@images/menu.png" />
        </image>
    </ImageView>

    <!-- lockItem — kept at your original coordinates -->
    <ImageView fx:id="lockItem"
               fitHeight="104.0" fitWidth="198.0"
               layoutX="807.0" layoutY="450.0"
               onMouseClicked="#handleLockClicked"
               pickOnBounds="true" preserveRatio="true"
               style="-fx-cursor: hand;">
        <image>
            <Image url="@images/lock.png" />
        </image>
    </ImageView>

    <!-- arrowLeft — SAME LOCATION AS ROOM 2 -->
    <ImageView fx:id="arrowLeft"
               fitHeight="140.0" fitWidth="120.0"
               layoutX="190.0" layoutY="500.0"
               onMouseClicked="#handleArrowLeftClickedFour"
               pickOnBounds="true" preserveRatio="true"
               style="-fx-cursor: hand;">
        <image>
            <Image url="@images/arrow-left.png" />
        </image>
    </ImageView>

    <!-- Room4 does NOT have a right arrow in your file, so none included.
         If you want one, tell me which handler to attach. -->

</AnchorPane>
