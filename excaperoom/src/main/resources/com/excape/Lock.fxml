<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.Shadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import java.net.*?>

<StackPane xmlns="http://javafx.com/javafx/13"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.excape.DirectionalLockController"
           alignment="CENTER">

    <children>
        <AnchorPane prefHeight="646.0" prefWidth="903.0"
                    StackPane.alignment="CENTER">

            <children>

                <ImageView fitHeight="484.0" fitWidth="609.0" layoutX="147.0" layoutY="49.0">
                    <image>
                        <Image url="@images/directionalLock.png" />
                    </image>
                    <effect>
                        <Shadow />
                    </effect>
                </ImageView>

                <Button fx:id="upButton" layoutX="427.0" layoutY="266.0"
                        rotate="270.0" text="> " onAction="#pressedUp">
                    <font><Font size="24.0" /></font>
                </Button>

                <Button fx:id="leftButton" layoutX="337.0" layoutY="337.0"
                        rotate="180.0" text="> " onAction="#pressedLeft">
                    <font><Font size="24.0" /></font>
                </Button>

                <Button fx:id="rightButton" layoutX="523.0" layoutY="337.0"
                        text="> " onAction="#pressedRight">
                    <font><Font size="24.0" /></font>
                </Button>

                <Button fx:id="downButton" layoutX="429.0" layoutY="408.0"
                        rotate="90.0" text="> " onAction="#pressedDown">
                    <font><Font size="24.0" /></font>
                </Button>

                <Button fx:id="enterButton" layoutX="408.0" layoutY="337.0"
                        text="enter" onAction="#pressedEnter">
                    <font><Font size="24.0" /></font>
                </Button>

                <Text fx:id="sequenceText" layoutX="408.0" layoutY="592.0"
                      style="-fx-fill:white;">
                    <font><Font size="36.0" /></font>
                </Text>

                <Button fx:id="exitButton" layoutX="802.0" layoutY="24.0"
                        text="EXIT" onAction="#pressedExit">
                    <font><Font size="24.0" /></font>
                </Button>

                <Button fx:id="hintButton" layoutX="36.0" layoutY="23.0"
                        prefHeight="53.0" prefWidth="88.0"
                        text="Hint" onAction="#pressedHint">
                    <font><Font size="24.0" /></font>
                </Button>

            </children>
        </AnchorPane>
    </children>

   <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>

</StackPane>
