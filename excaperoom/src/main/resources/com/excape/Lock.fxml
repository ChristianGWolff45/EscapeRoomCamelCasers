<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.Shadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import java.net.*?>


<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="646.0" prefWidth="903.0" xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1"  fx:controller="com.excape.DirectionalLockController">
    <children>
      <ImageView fitHeight="484.0" fitWidth="609.0" layoutX="147.0" layoutY="49.0">
         <image>
            <Image url="@images/directionalLock.png" />
         </image>
         <effect>
            <Shadow />
         </effect>
      </ImageView>

      <!-- Up button (rotated visually if you like) -->
      <Button fx:id="upButton" layoutX="427.0" layoutY="266.0" mnemonicParsing="false"
              rotate="270.0" text="> " onAction="#pressedUp">
         <font>
            <Font size="24.0" />
         </font>
      </Button>

      <!-- Left button -->
      <Button fx:id="leftButton" layoutX="337.0" layoutY="337.0" mnemonicParsing="false"
              rotate="180.0" text="> " onAction="#pressedLeft">
         <font>
            <Font size="24.0" />
         </font>
      </Button>

      <!-- Right button -->
      <Button fx:id="rightButton" layoutX="523.0" layoutY="337.0" mnemonicParsing="false"
              text="> " onAction="#pressedRight">
         <font>
            <Font size="24.0" />
         </font>
      </Button>

      <!-- Down button -->
      <Button fx:id="downButton" layoutX="429.0" layoutY="408.0" mnemonicParsing="false"
              rotate="90.0" text="> " onAction="#pressedDown">
         <font>
            <Font size="24.0" />
         </font>
      </Button>

      <!-- Enter button -->
      <Button fx:id="enterButton" layoutX="408.0" layoutY="337.0" mnemonicParsing="false"
              text="enter" onAction="#pressedEnter">
         <font>
            <Font size="24.0" />
         </font>
      </Button>

      <!-- Sequence display: this is where the user-entered sequence appears -->
      <Text fx:id="sequenceText" layoutX="408.0" layoutY="592.0" strokeType="OUTSIDE" strokeWidth="0.0" text="" style="-fx-fill: white;">
         <font>
            <Font size="36.0" />
         </font>
      </Text>

      <!-- Exit and Hint buttons -->
      <Button fx:id="exitButton" layoutX="802.0" layoutY="24.0" mnemonicParsing="false" text="EXIT" onAction="#pressedExit">
         <font>
            <Font size="24.0" />
         </font>
      </Button>

      <Button fx:id="hintButton" layoutX="36.0" layoutY="23.0" mnemonicParsing="false" prefHeight="53.0" prefWidth="88.0" text="Hint" onAction="#pressedHint">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
   </children>
   <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>
</AnchorPane>
