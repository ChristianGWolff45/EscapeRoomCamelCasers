<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.excape.RoomController"
            fx:id="root"
            prefWidth="1100" prefHeight="800"
            style="-fx-background-color: black;">

    <!-- Background image (controller will bind/center it) -->
    <ImageView fx:id="mainImageView"
               pickOnBounds="true"
               preserveRatio="true"
               smooth="true"
               fitWidth="1100.0" fitHeight="800.0">
        <image>
            <Image url="@images/Room2.png" />
        </image>
    </ImageView>

    <!-- menuButton: kept at same visual position (layoutY=348 in your file) -->
    <ImageView fx:id="menuButton"
               fitHeight="104.0" fitWidth="106.0"
               layoutX="150.0" layoutY="900.0"
               onMouseClicked="#handleMenuClick"
               pickOnBounds="true" preserveRatio="true"
               style="-fx-cursor: hand;">
        <image>
            <Image url="@images/menu.png" />
        </image>
        <effect>
            <ColorAdjust brightness="1.0" contrast="-1.0" saturation="-1.0" />
        </effect>
    </ImageView>

    <!-- examItem: left as-is, you can tweak layoutX/layoutY later -->
    <ImageView fx:id="examItem"
               fitHeight="186.0" fitWidth="208.0"
               layoutX="900.0" layoutY="730.0"
               onMouseClicked="#handleExamClicked"
               pickOnBounds="true" preserveRatio="true"
               style="-fx-cursor: hand;">
        <image>
            <Image url="@images/exam.png" />
        </image>
    </ImageView>

    <!-- right arrow: kept at same coordinates (layoutX=540, layoutY=177) -->
    <ImageView fx:id="arrowRight"
               fitHeight="140.0" fitWidth="120.0"
               layoutX="1640.0" layoutY="500.0"
               onMouseClicked="#handleArrowRightClickedTwo"
               pickOnBounds="true" preserveRatio="true"
               style="-fx-cursor: hand;">
        <image>
            <Image url="@images/arrow-right.png" />
        </image>
    </ImageView>

    <!-- left arrow: kept, you can position as needed -->
    <ImageView fx:id="arrowLeft"
               fitHeight="140.0" fitWidth="120.0"
               layoutX="160.0" layoutY="500.0"
               onMouseClicked="#handleArrowLeftClickedTwo"
               pickOnBounds="true" preserveRatio="true"
               style="-fx-cursor: hand;">
        <image>
            <Image url="@images/arrow-left.png" />
        </image>
    </ImageView>

</AnchorPane>
