<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.*?>

<AnchorPane prefHeight="725.0" prefWidth="1072.0"
            xmlns="http://javafx.com/javafx/13"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.excape.InventoryHintsController">

    <children>
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    vbarPolicy="AS_NEEDED"
                    hbarPolicy="NEVER"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="0.0">

            <!-- IMPORTANT: content must be inside the ScrollPane -->
            <content>
                <!-- AnchorPane where controller will place dynamic cards -->
                <AnchorPane fx:id="Hints" prefHeight="1200.0" prefWidth="1072.0" />
            </content>
        </ScrollPane>

        <!-- Static controls -->
        <Button fx:id="exitButton"
                text="Exit"
                AnchorPane.topAnchor="20.0"
                AnchorPane.rightAnchor="30.0" />

        <Label text="Game Inventory"
               AnchorPane.topAnchor="65.0"
               AnchorPane.leftAnchor="230.0" />

        <Label text="Your collected hints"
               AnchorPane.topAnchor="95.0"
               AnchorPane.leftAnchor="210.0"/>

        <Button fx:id="hintsButton"
                      text="Hints"
                      prefHeight="25.0"
                      prefWidth="383.0"
                      onAction="#onHintsClick"
                      AnchorPane.leftAnchor="115.0"
                      AnchorPane.topAnchor="135.0" />
    </children>
    <stylesheets>
      <URL value="@inventoryStyles.css" />
   </stylesheets>
</AnchorPane>
