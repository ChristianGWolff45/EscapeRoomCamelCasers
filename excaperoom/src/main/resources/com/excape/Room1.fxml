<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.excape.RoomController"
            fx:id="root"
            prefWidth="1100" prefHeight="800"
            style="-fx-background-color: black;">

    <!-- Background image anchored to all edges (fitWidth/fitHeight will be bound to root). -->
<!-- Background image: NO AnchorPane.* anchors so we can center it in code -->
   <ImageView fx:id="mainImageView"
            pickOnBounds="true"
            preserveRatio="true"
            smooth="true"
            fitWidth="1100.0" fitHeight="800.0">
      <image>
         <Image url="@images/Room1.png" />
      </image>
   </ImageView>


    <!-- Overlay items (same IDs/handlers as before). Adjust layoutX/layoutY to position. -->
    <ImageView fx:id="menuButton"
               fitHeight="104.0" fitWidth="106.0"
               layoutX="160.0" layoutY="900.0"
               onMouseClicked="#handleMenuClick"
               pickOnBounds="true" preserveRatio="true"
               style="-fx-cursor: hand;">
        <image>
            <Image url="@images/menu.png" />
        </image>
    </ImageView>

    <ImageView fx:id="newspaperItem"
               fitHeight="104.0" fitWidth="198.0"
               layoutX="1000.0" layoutY="500.0"
               onMouseClicked="#handleNewspaperClicked"
               pickOnBounds="true" preserveRatio="true"
               style="-fx-cursor: hand;">
        <image>
            <Image url="@images/newspaper.png" />
        </image>
    </ImageView>

    <ImageView fx:id="arrowRight"
               fitHeight="140.0" fitWidth="120.0"
               layoutX="1650.0" layoutY="500.0"
               onMouseClicked="#handleArrowRightClicked"
               pickOnBounds="true" preserveRatio="true"
               style="-fx-cursor: hand;">
        <image>
            <Image url="@images/arrow-right.png" />
        </image>
    </ImageView>

</AnchorPane>
