<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.ImagePattern?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import java.net.*?>

<StackPane xmlns="http://javafx.com/javafx/13"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.excape.GamePickerController"
           prefWidth="1072.0" prefHeight="725.0">

    <!-- Add stylesheet reference as a String (fx:value) -->
    <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>

    <VBox spacing="18.0" alignment="TOP_CENTER">
        <Text text="Escape Room Game Picker"
              style="-fx-fill: white;"
              strokeType="OUTSIDE" strokeWidth="0.0">
            <font>
                <Font size="36.0"/>
            </font>
        </Text>

        <VBox spacing="10.0" alignment="CENTER" prefWidth="900">
            <Rectangle arcHeight="5.0" arcWidth="5.0"
                       height="200.0" width="874.0"
                       stroke="BLACK" strokeType="INSIDE">
                <fill>
                    <ImagePattern>
                        <image>
                            <!-- keep the @resource syntax for images inside FXML -->
                            <Image url="@images/Swearingen.png" />
                        </image>
                    </ImagePattern>
                </fill>
            </Rectangle>

            <Text text="Escape Swearingen" style="-fx-fill: white;">
                <font><Font size="18.0"/></font>
            </Text>

            <Text text="Welcome to the engineering building at the University of South Carolina, many souls have lost their way in the labyrinth â€” will you join them or will you escape?"
                  style="-fx-fill: white;"
                  wrappingWidth="843.0">
                <font><Font size="18.0"/></font>
            </Text>

            <Button fx:id="EscapeSwearingen"
                    onAction="#EscapeSwearingen"
                    text="Play Game"
                    prefWidth="877.0"/>
        </VBox>
    </VBox>
</StackPane>
